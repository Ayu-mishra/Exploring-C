/******************************************************************************

C.(3) A number is entered through the keyboard. The number may 
contain 1,2,3,4, or 5 digits. Write a program to find the number 
of digits in the number.

*******************************************************************************/
#include <stdio.h>

 

int main()
{
   
    int number,count=0; 
    
    printf("Enter of number: ");
    scanf("%d",&number);
    
    while(number)
    {
        number/=10;
        count++;
    }
    
    printf("Number of digits are: %d",count);
    
    return 0;
}
